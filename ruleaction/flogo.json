{
   "name":"mysixthapp",
   "type":"flogo:app",
   "version":"0.0.1",
   "description":"My flogo application description",
   "triggers":[
      {
         "id":"my_rest_trigger",
         "ref":"github.com/TIBCOSoftware/flogo-contrib/trigger/rest",
         "settings":{
            "port":"9233"
         },
         "handlers":[
            {
               "name":"customerevent",
               "action":{
                  "id":"ruleaction"
               },
               "settings":{
                  "method":"GET",
                  "path":"/cust"
               }
            },{
               "name":"debitevent",
               "action":{
                  "id":"ruleaction"
               },
               "settings":{
                  "method":"GET",
                  "path":"/debit"
               }
            },{
               "name":"packageevent",
               "action":{
                  "id":"ruleaction"
               },
               "settings":{
                  "method":"GET",
                  "path":"/pkg"
               }
            },
            {
               "name":"scanevent",
               "action":{
                  "id":"ruleaction"
               },
               "settings":{
                  "method":"GET",
                  "path":"/scan"
               }
            }
         ]
      }
   ],
   "actions":[
      {
         "id":"ruleaction",
         "name":"Rule action",
         "ref":"github.com/TIBCOSoftware/bego/ruleaction",
         "data":{
            "Tds":[
               {
                  "Name":"customerevent",
                  "TTLInSeconds":-1,
                  "Props":{
                     "name":{
                        "Name":"name",
                        "PropType":"string"
                     },
                     "status":{
                        "Name":"status",
                        "PropType":"string"
                     },
                     "balance":{
                        "Name":"balance",
                        "PropType":"string"
                     },
                     "addr":{
                        "Name":"addr",
                        "PropType":"string"
                     }
                  }
               },
               {
                  "Name":"debitevent",
                  "TTLInSeconds":0,
                  "Props":{
                     "name":{
                        "Name":"name",
                        "PropType":"string"
                     },
                     "debit":{
                        "Name":"debit",
                        "PropType":"string"
                     }
                  }
               },
               {
                  "Name":"packageevent",
                  "TTLInSeconds":0,
                  "Props":{
                     "packageid":{
                        "Name":"packageid",
                        "PropType":"string"
                     },
                     "next":{
                        "Name":"next",
                        "PropType":"string"
                     },
                     "status":{
                        "Name":"status",
                        "PropType":"string"
                     },
                     "isnew":{
                        "Name":"isnew",
                        "PropType":"string"
                     }
                  }
               },
               {
                  "Name":"package",
                  "TTLInSeconds":-1,
                  "Props":{
                     "packageid":{
                        "Name":"packageid",
                        "PropType":"string"
                     },
                     "curr":{
                        "Name":"curr",
                        "PropType":"string"
                     },
                     "next":{
                        "Name":"next",
                        "PropType":"string"
                     },
                     "status":{
                        "Name":"status",
                        "PropType":"string"
                     },
                     "isnew":{
                        "Name":"isnew",
                        "PropType":"string"
                     }
                  }
               },
               {
                  "Name":"scanevent",
                  "TTLInSeconds":0,
                  "Props":{
                     "packageid":{
                        "Name":"packageid",
                        "PropType":"string"
                     },
                     "curr":{
                        "Name":"curr",
                        "PropType":"string"
                     },
                     "next":{
                        "Name":"next",
                        "PropType":"string"
                     },
                     "eta":{
                        "Name":"eta",
                        "PropType":"string"
                     }
                  }
               },
               {
                  "Name":"scantimeout",
                  "TTLInSeconds":0,
                  "Props":{
                     "packageid":{
                        "Name":"packageid",
                        "PropType":"string"
                     },
                     "next":{
                        "Name":"next",
                        "PropType":"string"
                     }
                  }
               }
            ]
         }
      }
   ]
}
